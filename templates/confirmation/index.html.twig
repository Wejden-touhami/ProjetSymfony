{% extends 'base.html.twig' %}

{% block title %}Confirmation index{% endblock %}

{% block body %}
    <h1>Confirmation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for confirmation in confirmations %}
            <tr>
                <td>{{ confirmation.id }}</td>
                <td>
                    <a href="{{ path('confirmation_show', {'id': confirmation.id}) }}">show</a>
                    <a href="{{ path('confirmation_edit', {'id': confirmation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
